<p id="notice"><%=  notice %> </p>
<h1>Books</h1>
    <table>
        <thread>
            <tr>
                <th class='table-name'>Title</th>
                <th class='table-name'>Body</th>
            </tr>
        </thread>
  
        <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", book_path(book) %></td>
                <td><%= link_to "Edit", edit_book_path(book) %></td>
                <td> <%= link_to book_path(book), method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="uk-icon-times"></i>
                        <%= t('buttons.destroy') %>
                <% end %> </td>
            </tr>
        <% end %>
    </table>
  

  <%# ここからエラーメッセージ %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %> error prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%# ここまでエラーメッセージ %>



<%= form_with model:@book, url:'/books', local:true do |f| %>
<h2>New Book</h2>
  <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
      <%= f.text_area :body %>
        <p></p>
            <%= f.submit 'Create Book' %>
<% end %>