<body>
<h1>Books</h1>
<table>
  <tr>
   <th>Title</th>
   <th>Body</th>
  </tr>
  
  <% @books.each do |book| %>
  <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   
  
   
   <td><%= link_to "Show", book_path(book) %></td>
   <td><%= link_to "Edit", edit_book_path(book) %></td>
   <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
   
  </tr>
  <% end %>
</table>
  
</body>



<%= form_with model:@book, url:'/books', local:true do |f| %>

  <h4>New Book</h4>
  <p>Title</p>
    <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <p></p>
  <%= f.submit 'Create Book' %>


<% end %>


